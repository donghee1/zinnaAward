<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zinnaworks.mapper.MemberMapper">
	<insert id="insertMemberInfo"
		parameterType="com.zinnaworks.vo.Member">
		INSERT INTO zinnaworks.user_info
		(user_no, email, name,
		password, team ,entryDate, phone, role)
		VALUES(#{user_no},#{email},#{name},#{password},#{team},
		#{entryDate},#{phone}, #{role});
	</insert>

	<select id="selectLoginInfo"
		resultType="com.zinnaworks.vo.Member">
		SELECT * FROM user_info
		WHERE email = #{email} AND password
		= #{password}
	</select>

	<select id="selectCheckById"
		resultType="com.zinnaworks.vo.Member">
		SELECT * FROM user_info
		WHERE email = #{email};
	</select>

	<select id="loadUserByUsername"
		resultType="com.zinnaworks.vo.Member">
		SELECT * FROM user_info
		WHERE email = #{email}
	</select>

	<update id="updateMemberPwd"
		parameterType="com.zinnaworks.vo.Member">
		UPDATE user_info SET pwd = #{pwd}
		WHERE email = #{email}
	</update>

	<insert id="mergeInsertAuthInfo"
		parameterType="com.zinnaworks.vo.Mail">
		INSERT INTO zinnaworks.USER_AUTH(USER_ID, AUTH_KEY, CRE_DT, EXP_DT)
		VALUES(#{userId},#{authKey},#{creDt},#{expDt})
	</insert>

 <select id="selectAuthInfo" parameterType="String" resultType="com.zinnaworks.vo.MailAuth">
		SELECT *
		FROM zinnaworks.USER_AUTH
		WHERE USER_ID=#{email} AND EXP_DT = (SELECT MAX(EXP_DT) FROM USER_AUTH)  
	</select>  
	
